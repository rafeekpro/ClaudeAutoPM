# Local Git Configuration for ClaudeAutoPM
# This file prevents AI assistants from being listed as contributors

[commit]
    # Strip Co-authored-by lines for AI assistants
    cleanup = strip

[filter "no-ai-contributors"]
    clean = sed '/Co-[Aa]uthored-[Bb]y:.*Claude/d; /Co-[Aa]uthored-[Bb]y:.*Copilot/d; /Co-[Aa]uthored-[Bb]y:.*anthropic/d; /Co-[Aa]uthored-[Bb]y:.*github-actions/d'
    smudge = cat

[alias]
    # Commit without AI co-authors
    commit-clean = "!f() { git commit \"$@\" | sed '/Co-[Aa]uthored-[Bb]y:.*Claude/d; /Co-[Aa]uthored-[Bb]y:.*Copilot/d'; }; f"

    # Show log without AI co-authors
    log-clean = "!git log --format='%h %s%n%b' | sed '/Co-[Aa]uthored-[Bb]y:.*Claude/d; /Co-[Aa]uthored-[Bb]y:.*Copilot/d'"

    # Remove AI co-authors from last commit
    amend-clean = "!git commit --amend -m \"$(git log -1 --format='%s')\" -m \"$(git log -1 --format='%b' | sed '/Co-[Aa]uthored-[Bb]y:.*Claude/d; /Co-[Aa]uthored-[Bb]y:.*Copilot/d')\""